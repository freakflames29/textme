<div class="container ui" style="margin-top:30px">

  <%= link_to image_tag('rumi.png', class: "mt-3 ui centered medium image"), root_path %>
  <h2 class="ui center aligned icon header" style="margin-top:-10px">
    Rumi-a stupid messenger
  </h2>
</div>

<h1 class="ui center aligned header">Access your account to use Rumi</h1>
<!-- </div> -->
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for :session, class: 'ui form', url: login_path do |f| %>

        <div class="field">
          <%= f.label :username %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: 'Username' %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: 'Password' %>
            <i class="lock icon"></i>
          </div>
        </div>
        <br>
        <div class="ui red submit ">
          <%= f.button "Login", class: 'ui red button' %>
        </div>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big basic red button">
        <i class="user icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
